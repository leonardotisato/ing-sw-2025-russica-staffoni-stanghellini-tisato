<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.cg04.client.view.gui.controllers.PrelobbySceneController">
    <children>
        <GridPane layoutX="74.0" layoutY="30.0" prefHeight="101.0" prefWidth="95.0">
            <columnConstraints>
                <ColumnConstraints prefWidth="49.91" />
                <ColumnConstraints prefWidth="53.58" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="78.23" />
                <RowConstraints prefHeight="71.26" />
            </rowConstraints>
            <children>
                <Circle fx:id="blueCircle" fill="#2884da" radius="19.0" stroke="BLACK" strokeType="INSIDE" />
                <Circle fx:id="yellowCircle" fill="#d0e81e" radius="19.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="1" />
                <Circle fx:id="greenCircle" fill="#0cb525" radius="19.0" stroke="BLACK" strokeType="INSIDE" GridPane.rowIndex="1" />
                <Circle fx:id="redCircle" fill="#cd1919" radius="19.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>

        <Button fx:id="createGameButton" layoutX="50.0" layoutY="302.0" prefHeight="75.0" prefWidth="132.0" text="Create Game" />

        <Text layoutX="61.0" layoutY="162.0" text="Select Game's level" />
        <Text layoutX="49.0" layoutY="240.0" text="Select Number of players" />
        <Text layoutX="87.0" layoutY="25.0" text="select color" />
        <Text layoutX="326.0" layoutY="24.0" text="join an existing game" />

        <!-- Game Level Buttons -->
        <GridPane layoutX="74.0" layoutY="180.0" prefHeight="30.0" prefWidth="96.0">
            <columnConstraints>
                <ColumnConstraints prefWidth="48.0" />
                <ColumnConstraints prefWidth="48.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" />
            </rowConstraints>
            <children>
                <ToggleButton fx:id="level1Button" prefHeight="26.0" prefWidth="35.0" text="1" />
                <ToggleButton fx:id="level2Button" prefHeight="26.0" prefWidth="36.0" text="2" GridPane.columnIndex="1" />
            </children>
        </GridPane>

        <!-- Player Count Buttons -->
        <GridPane layoutX="43.0" layoutY="251.0" prefHeight="28.0" prefWidth="158.0">
            <columnConstraints>
                <ColumnConstraints prefWidth="100.0" />
                <ColumnConstraints prefWidth="100.0" />
                <ColumnConstraints prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" />
            </rowConstraints>
            <children>
                <ToggleButton fx:id="player2Button" prefHeight="26.0" prefWidth="37.0" text="2" />
                <ToggleButton fx:id="player3Button" prefHeight="26.0" prefWidth="38.0" text="3" GridPane.columnIndex="1" />
                <ToggleButton fx:id="player4Button" prefHeight="26.0" prefWidth="39.0" text="4" GridPane.columnIndex="2" />
            </children>
        </GridPane>

        <ScrollPane fx:id="gamesScrollPane" layoutX="201.0" layoutY="37.0" prefHeight="339.0" prefWidth="383.0" />
    </children>
</AnchorPane>
